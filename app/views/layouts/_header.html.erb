<div class="top-color" style="height: 40%;">
  <% if admin_signed_in? %>
  <div class="row text-center">
    <div class="col"></div>
    <div class="col search_form">
      <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
        <%= f.select :range, options_for_select([['ユーザー'], ['趣味']]) %>
        <%= f.text_field :word %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
    <div class="col">
    <%= link_to destroy_admin_session_path, method: :delete do %>
      ログアウト
    <% end %>
    </div>
  </div>
  <% elsif user_signed_in? %>
  <div class="row text-center">
    <div class="col"></div>
    <div class="col search_form">
      <%= form_with url: searches_search_path, local: true, method: :get do |f| %>
        <%= f.select :range, options_for_select([['ユーザー'], ['趣味']]) %>
        <%= f.text_field :word %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
    <div class="col">
    <%= link_to destroy_user_session_path, method: :delete do %>
      ログアウト
    <% end %>
    </div>
  </div>
  <% else %>
  <div class="row text-center">
    <div class="col"></div>
    <div class="col">
      <%= link_to new_user_session_path do %>
        ログイン
      <% end %>
      <%= link_to new_user_registration_path do %>
        新規登録
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<nav class="navbar navbar-expand-lg band-color" style="height: 40%;">
  <div class="navbar-collapse" >
    <div class = "header_inner">
      <% if admin_signed_in? %>
        <%= link_to image_tag("osituke2.png", size: '100x100', alt: "ositukeロゴ"),admin_hobbies_path %>
      <% elsif user_signed_in? %>
        <%= link_to image_tag("osituke2.png", size: '100x100', alt: "ositukeロゴ"),hobbies_path %>
      <% elsif request.fullpath.include? ("/admin") %>
        <%= link_to image_tag("osituke2.png", size: '100x100', alt: "ositukeロゴ"),admin_root_path %>
      <% else %>
        <%= link_to image_tag("osituke2.png", size: '100x100', alt: "ositukeロゴ"),root_path %>
      <% end %>
    </div>
    <ul class="navbar-nav mx-auto">
      <!--管理者がログインしていたら-->
      <% if admin_signed_in? %>
        <li>
          <%= link_to admin_tags_path, class: "nav-link" do %>
          タグ一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_hobbies_path, class: "nav-link" do %>
          趣味一覧
          <% end %>
        </li>
      <!--ユーザーがログインしていたら-->
      <% elsif user_signed_in? %>
        <li>
          <%= link_to tags_path, class: "nav-link" do %>
          タグ一覧
          <% end %>
        </li>
        <li>
          <%= link_to hobbies_path, class: "nav-link" do %>
          趣味一覧
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user), class: "nav-link" do %>
            マイページ
          <% end %>
        </li>
      <!--ログイン前画面-->
      <% else %>
      OsitukeApp
      <% end %>
    </ul>
  </div>
</nav>