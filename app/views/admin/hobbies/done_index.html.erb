<div class="container text-center">
  <h2>やってみた趣味一覧</h2>
  <% if @hobbies.present? %>
    <% @hobbies.each do |hobby| %>
      <div class="row py-1 my-1 wrap mx-5 border-color">
        <div class="col-4 media">
          <%= link_to admin_user_path(hobby.user_id) do %>
          <%= image_tag hobby.user.get_profile_image(80,80)%>
          <% end %>
          <div class="media-body text-left pl-2">
            <h5><%= link_to hobby.user.name, admin_user_path(hobby.user_id) %></h5>
          </div>
        </div>
        <div class="col-8 text-left">
          <div class="row">
            <h4 class="col-5"><%= link_to "#{hobby.title}", admin_hobby_path(hobby.id) %></h4>
            <div class="col-4 d-flex">
              <%= render "stars/star_average", hobby: hobby %>
            </div>
            <div class="col-3 text-center">
              <%= link_to admin_genre_path(hobby.genre.id), class: "btn btn-outline-info rounded-pill" do %>
              <i class="fas fa-tag"></i>
              <%= hobby.genre.genre_name %>
              <% end %>
            </div>
          </div>
          <div class="row" style="width: 100%;">
            <%= safe_join(hobby.body.split("\n"),tag(:br)) %>
          </div>
          <div class="row">
            <% hobby.hobby_images.each do |hobby_image| %>
            <%= image_tag(hobby_image, width:100, height:100 )%>
            <% end %>
          </div>
          <div class="row">
            <div class="col-3">
              <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= hobby.favorites.count %> ナイス趣味
            </div>
            <div class=col-3>
            <%= hobby.hobby_comments.count %> コメント
            </div>
            <div class= "col-6 text-right" style="opacity: 0.5;">
              <%= hobby.how_long_ago %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <%= paginate @hobbies, theme: 'twitter-bootstrap-4' %>
  <% else %>
  <h5>まだやってみた趣味はありません</h5>
  <% end %>
</div>