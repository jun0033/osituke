<% comments.each do |comment| %>
    <div class="row my-1 mx-5 p-1" style="background-color: #b4e6df;">
      <div class="col-sm-2 text-right">
        <%= link_to user_path(comment.user_id) do %>
        <%= image_tag comment.user.get_profile_image(80,80)%>
        <% end %>
      </div>
      <div class="col-sm-10 wrap">
        <div class="row">
          <div class="col-2 col-sm-2 text-left">
           <h4><%= link_to "#{comment.user.name}",user_path(comment.user_id) %></h4>
          </div>
          <div class="col-8 col-sm-8 text-left">
            <div class="row" style="width: 100%;">
              <%= link_to hobby_path(comment.hobby_id) do %>
              <i class="fas fa-reply"></i>
              <%= comment.hobby.title %>
              <% end %>
            </div>
            <div class="row" style="width: 100%;">
              <%= safe_join(comment.comment.split("\n"),tag(:br)) %>
            </div>
          </div>
          <div class="col-2 col-sm-2">
          <% if comment.user.id == current_user.id %>
            <%= link_to hobby_hobby_comment_path(comment.hobby_id, comment.id), method: :delete, style: "right: 5px;" do %>
            <i class="fas fa-trash fa-sm"></i>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>