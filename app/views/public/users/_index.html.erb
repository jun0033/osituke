<% users.reverse.each do |user| %>
<div class="row my-1 justify-content-center mx-5" style="background-color: #d4ecea;">
  <div class="col-8 media">
    <%= link_to user_path(user) do %>
    <%= image_tag user.get_profile_image(100,100), class: "mr-2 my-2" %>
    <% end %>
    <div class="media-body">
      <p><h3><%= link_to user.name, user_path(user) %></h3></p>
      <p><%= user.introduction %></p>
    </div>
  </div>
  <div class="col-4 my-auto text-left">
    <div class="row mt-1">
      <% unless user == current_user %>
        <% if current_user.active_follow?(user) %>
          <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm btn-danger" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-success" %>
        <% end %>
      <% end %>
    </div>
    <div class="row mt-1">
    <%= link_to active_follow_user_relationships_path(user.id) do %>
    <%= user.active_follows.count %>
    <% end %>
    フォロー中
    </div>
    <div class="row mt-1">
    <%= link_to passive_follow_user_relationships_path(user.id) do %>
    <%= user.passive_follows.count %>
    <% end %>
    フォロワー
    </div>
  </div>
</div>
<% end %>