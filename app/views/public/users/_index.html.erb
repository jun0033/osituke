<% users.each do |user| %>
<div class="row my-1 justify-content-center mx-5 border-color-blue">
  <div class="col-8 media">
    <%= link_to user_path(user) do %>
    <%= image_tag user.get_profile_image(100,100), class: "mr-2 my-2" %>
    <% end %>
    <div class="media-body">
      <p><h3><%= link_to user.name, user_path(user) %></h3></p>
      <p><%= user.introduction %></p>
    </div>
  </div>
  <div class="col-4 my-auto text-left">
    <div class="row mt-1">
      <% unless user == current_user %>
        <div id= "relationship_buttons_<%= user.id %>">
          <%= render "public/relationships/relationship", user: user %>
        </div>
      <% end %>
    </div>
    <div class="row mt-1">
    <%= link_to active_follow_user_relationships_path(user.id) do %>
    <%= user.active_follows.count %>
    <% end %>
    フォロー中
    </div>
    <div class="row mt-1">
    <%= link_to passive_follow_user_relationships_path(user.id) do %>
    <%= user.passive_follows.count %>
    <% end %>
    フォロワー
    </div>
  </div>
</div>
<% end %>