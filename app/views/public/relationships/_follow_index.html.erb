<% users.each do |user| %>
<div class="row py-1 my-1">
  <div class="col-sm-2">
  <%= image_tag user.get_profile_image(80,80) %>
  </div>
  <div class="col-sm-7">
    <div class="row">
      <%= link_to user.name, user_path(user) %>
    </div>
    <div class="row">
      <%= user.introduction %>
    </div>
  </div>
  <div class="col-sm-2 mt-1">
  <% unless @user == current_user %>
    <% if current_user.active_follow?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm btn-danger" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-success" %>
    <% end %>
  <% end %>
  </div>
</div>
<% end %>