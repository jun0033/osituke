<% if current_user.active_follow?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class:"btn btn-sm btn-success" %>
<% end %>