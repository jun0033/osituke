<div class="container text-center wrap">
  <%= flash[:notice] %>
  <div class="row my-3 mx-5" style="background-color: #d4ecea;">
    <div class="col-2 text-right mt-1">
      <%= image_tag @user.get_profile_image(80,80) %>
    </div>
    <div class="col-2 col-sm-2 text-left">
     <h4><%= link_to @user.name, user_path(@user.id) %></h4>
    </div>
    <div class="col-8 col-sm-8 text-left p-2">
      <div class="row">
        <div class="col-10">
        <h5><%= @hobby.title %></h5>
        </div>
        <div class="col-2">
          <% if @hobby.user.id == current_user.id %>
            <%= link_to user_hobby_path(@hobby.user_id, @hobby.id), method: :delete, style: "right: 5px;" do %>
            <i class="fas fa-trash fa-lg"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row" style="width: 100%;">
        <!--ユーザーのつけた段落を反映-->
        <%= safe_join(@hobby.body.split("\n"),tag(:br)) %>
      </div>
      <div class="row">
        <% @hobby.hobby_images.each do |hobby_image| %>
        <%= image_tag(hobby_image, width:100, height:100 )%>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to user_hobby_path(@hobby.user_id, @hobby.id) do %>
    <%= @hobby.hobby_comments.count %> コメント
  <% end %>
  <%= form_with model: @comment, url: user_hobby_hobby_comments_path(hobby_id: @hobby.id), class: "form-inline", local: true do |f| %>
    <%= f.text_field :comment, placeholder: "コメント", class: "form-control mr-2", style: "width: 70%" %>
    <%= f.submit "コメントする", class:"btn btn-primary", style: "width: 25%" %><br>
  <% end %>
</div>