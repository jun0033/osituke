<%= form_with model: hobby do |f| %>
  <div class="form-group">
    <h4>Title</h4>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body, class:"form-control", rows:"3" %>
  </div>
  <div class="form-group">
    <%= f.submit '趣味を押し付ける', class:"btn btn-sm btn-success" %>
  </div>
<% end %>