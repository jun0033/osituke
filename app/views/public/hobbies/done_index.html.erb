<div class="container text-center">
  <h2>やってみた趣味一覧</h2>
  <div class= "d-flex justify-content-end">
  <%= link_to to_does_user_path(@user), class: "btn btn-outline-success rounded mt-1" do %>
  ToDoリスト
  <i class="fas fa-arrow-right"></i>
  <% end %>
  </div>
  <% if @hobbies.present? %>
    <% @hobbies.each do |hobby| %>
      <div class="row py-1 my-1 wrap mx-5 border-color">
        <div class="col-4 media">
          <%= link_to user_path(hobby.user_id) do %>
          <%= image_tag hobby.user.get_profile_image(80,80)%>
          <% end %>
          <div class="media-body text-left pl-2">
            <h5><%= link_to hobby.user.name, user_path(hobby.user_id) %></h5>
          </div>
        </div>
        <div class="col-8 text-left">
          <div class="row">
            <h4 class="col-5"><%= link_to "#{hobby.title}", hobby_path(hobby.id) %></h4>
            <div class="col-4 d-flex">
              <%= render "stars/star_average", hobby: hobby %>
            </div>
            <div class="col-3 text-center">
              <%= link_to genre_path(hobby.genre.id), class: "btn btn-outline-info rounded-pill" do %>
              <i class="fas fa-tag"></i>
              <%= hobby.genre.genre_name %>
              <% end %>
            </div>
          </div>
          <div class="row" style="width: 100%;">
            <!--ユーザーのつけた段落を反映-->
            <%= safe_join(hobby.body.split("\n"),tag(:br)) %>
          </div>
          <div class="row">
            <% hobby.hobby_images.each do |hobby_image| %>
            <%= image_tag(hobby_image, width:100, height:100 )%>
            <% end %>
          </div>
          <div class="row">
            <div class="col-3" id="favorite_buttons_<%= hobby.id %>">
              <%= render "public/favorites/favorite", hobby: hobby %>
            </div>
            <div class=col-3>
            <%= link_to hobby_path(hobby.id) do %>
            <%= hobby.hobby_comments.count %> コメント
            <% end %>
            </div>
            <div class= "col-6 text-right" style="opacity: 0.5;">
              <%= hobby.how_long_ago %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <%= paginate @hobbies, theme: 'twitter-bootstrap-4' %>
  <% else %>
  <h5>まだやってみた趣味はありません</h5>
  <% end %>
</div>