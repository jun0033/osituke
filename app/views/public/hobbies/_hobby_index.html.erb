<% hobbies.reverse.each do |hobby| %>
<div class="row py-1 my-1" style="background-color: #b4e6df;">
  <div class="col-sm-2 text-right">
    <%= link_to user_path(hobby.user_id) do %>
    <%= image_tag hobby.user.get_profile_image(80,80)%>
    <% end %>
  </div>
  <div class="col-sm-10 wrap">
    <div class="row">
      <div class="col-2 col-sm-2 text-left">
        <h4><%= link_to hobby.user.name, user_path(hobby.user_id) %></h4>
      </div>
      <div class="col-10 col-sm-10 text-left">
        <div class="row">
          <h5><%= link_to "#{hobby.title}", hobby_path(hobby.id) %></h5>
        </div>
        <div class="row" style="width: 100%;">
          <!--ユーザーのつけた段落を反映-->
          <%= safe_join(hobby.body.split("\n"),tag(:br)) %>
        </div>
        <div class="row">
          <% hobby.hobby_images.each do |hobby_image| %>
          <%= image_tag(hobby_image, width:100, height:100 )%>
          <% end %>
        </div>
        <div class="row">
          <%= link_to hobby_path(hobby.id) do %>
          <%= hobby.hobby_comments.count %> コメント
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

