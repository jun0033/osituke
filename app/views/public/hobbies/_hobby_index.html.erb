<% hobbies.each do |hobby| %>
<div class="row py-1 my-1 wrap mx-5 border-color">
  <div class="col-4 media">
    <%= link_to user_path(hobby.user_id) do %>
    <%= image_tag hobby.user.get_profile_image(80,80)%>
    <% end %>
    <div class="media-body text-left pl-2">
      <h5><%= link_to hobby.user.name, user_path(hobby.user_id) %></h5>
    </div>
  </div>
  <div class="col-8 text-left">
    <div class="row">
      <h4 class="col-4"><%= link_to "#{hobby.title}", hobby_path(hobby.id) %></h4>
      <% if hobby.user.id == current_user.id %>
        <div class="col-1">
          <%= link_to edit_hobby_path(hobby.id), style: "right: 5px;" do %>
          <i class="fas fa-cogs"></i>
          <% end %>
        </div>
      <% end %>
      <div class="col-4 d-flex">
        <%= render "stars/star_average", hobby: hobby %>
      </div>
      <div class="col-3 text-center">
        <%= link_to genre_path(hobby.genre.id), class: "btn btn-outline-info rounded-pill" do %>
        <i class="fas fa-tag"></i>
        <%= hobby.genre.genre_name %>
        <% end %>
      </div>
    </div>
    <div class="row" style="width: 100%;">
      <%= safe_join(hobby.body.split("\n"),tag(:br)) %>
    </div>
    <div class="row">
      <% hobby.hobby_images.each do |hobby_image| %>
      <%= image_tag(hobby_image, width:100, height:100 )%>
      <% end %>
    </div>
    <div class="row mt-1">
      <% hobby.tags.each do |tag| %>
        #<%= link_to tag.tag_name, admin_tag_path(tag) %>
      <% end %>
      </div>
    <div class="row">
      <div class="col-3" id="favorite_buttons_<%= hobby.id %>">
        <%= render "public/favorites/favorite", hobby: hobby %>
      </div>
      <div class=col-3>
      <%= link_to hobby_path(hobby.id) do %>
      <%= hobby.hobby_comments.count %> コメント
      <% end %>
      </div>
      <div class="col-3" id="todo_buttons_<%= hobby.id %>">
        <%= render "public/to_does/to_do", hobby: hobby %>
      </div>
      <div class= "col-3 text-right" style="opacity: 0.5;">
        <%= hobby.how_long_ago %>
      </div>
    </div>
  </div>
</div>
<% end %>
<%= render "public/hobbies/create_btn" %>
